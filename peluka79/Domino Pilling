#include<iostream>

using namespace std;

int main()
{
	int m, n, d;
	cin>>m;
	cin>>n;
	
	if(1 <= m && m <= n && n <= 16)
	{
		if(m%2 == 0)
		{d = (m/2)*n;
		}
		else if(m%2 != 0 && n%2 == 0)
		{d = (m/2)*n + n/2;
		}
		else if(m%2 != 0 && n%2 != 0)
		{d = (m/2)*(n-1) + n/2 + m/2;
		}
	cout<<d;
    }
return 0;
}
