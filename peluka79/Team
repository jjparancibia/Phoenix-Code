#include<iostream>
using namespace std;
int main ()
{
	int n, a[1000][3], k, p=0, i=0, j=0, b[1000];
	
	cin>>n;
	
	
	 	
	if(n >= 1 && n <= 1000)
	{
		for( i = 0; i < n; i++)
		  {
		    for( j = 0; j < 3; j++)
		      {cin>>a[i][j];}
		  }
	
	   
	   
	    
		  
	        for(i = 0; i < n; i++)
			{
				
			       k = a[i][0]+a[i][1]+a[i][2] ;
			       b[i]=k;
				
				   if(k == 2 || k == 3)
				   {p++;}
				   
				   k = 0 ;
				   
				   
			}
			
			
			if( b[1000] <= 3 )
		       {cout<<p;}
	      
		  
	}
  
	system("pause");
	return 0;
}
