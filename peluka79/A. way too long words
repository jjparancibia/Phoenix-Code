#include<iostream>
#include<string>
#include<vector>


using namespace std;

int main()
{
	vector<string> v;
	int n, b = 0;
	string palabra;
	cin>>n;

if(1 <= n && n <= 100){
	
	for(int i = 0; i < n; i++)
	{ cin>>palabra;
	  v.push_back(palabra);  
	}
	
	for(int i = 0; i < v.size(); i++)
	{  if(v[i].length() <= 100 && v[i].length() >= 1)
	   b++;
	}
	
	if(b == n){
	
	for(int i = 0; i < v.size(); i++)
	{
	  if(v[i].length() > 10)
	  { cout<<v[i][0];
	    cout<<v[i].length()-2;
		cout<<v[i][v[i].length()-1];
	  }
	  
	  else 
	  { cout<<v[i];
	  }
	  cout<<"\n";
    }
}
}
return 0;
	
	
}
