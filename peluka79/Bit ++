#include<iostream>
#include<string>
#include<vector>

using namespace std;

int main()
{
	vector<string> v;
	int n, c = 0;
	string valor;
	cin>>n;
	
    for(int i = 0; i < n; i++)
    { cin>>valor;
      v.push_back(valor);
	}
	
	for(int i = 0; i < v.size(); i++)
	{if(v[i][0] == 'X')
	   { if(v[i][1] == '+')
	        {if(v[i][2] == '+') c++;}
         else if(v[i][1] == '-') 
		    {if(v[i][2] == '-') c--;}	   
	   }
	  
	  else if(v[i][0] == '+')
	   { if(v[i][1] == '+')
	        {if(v[i][2] == 'X') c++;}
	   }
			
	  else if(v[i][0] == '-')
	   { if(v[i][1] == '-')
	        {if(v[i][2] == 'X') c--;}			   
	   }
	}
	
	cout<<c;

return 0;	
}
