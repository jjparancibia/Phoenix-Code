#include<iostream>
#include<vector>

using namespace std;

int main()
{
	int n, k, m, valor, cont1 = 1, cont2 = 0, b = 0, c = 0;
	vector<int> v;
	
	cin>>n;
	cin>>k;
	
	if(1 <= k && k <= n && n <= 50)
	{
	  for(int i = 0; i < n; i++)
	  {cin>>valor;
	   v.push_back(valor);}
	  
	  m = v[k-1];
	  
	  for(unsigned int i = 0; i < v.size(); i++)
	  {if(valor <= 100 && valor >= 0)
	  	{b++;}
	  }
	  
	  if(b == n)
	  {
	  	 for(unsigned int i = 0; i < n-1; i++)
	      {if(v[i] >= v[i+1])
	  	    {c++;}
	        }
	    if(c == n-1)
	    {
		
	  	v.erase(v.begin() + k - 1);
	  	
	  	if(m != 0)  {
		  
		for(unsigned int i = 0; i < v.size(); i++)
		{if(v[i] >= m && v[i] != 0)
		  {cont1++;}
		}
		cout<<cont1;
                	}
	    else if(m == 0)	{
		for(unsigned int i = 0; i < v.size(); i++)
		{if(v[i] >= m && v[i] != 0)
		  {cont2++;}
		}
		cout<<cont2;
	               }
		
	   }
		
	  }
	  
	}

return 0;
}
