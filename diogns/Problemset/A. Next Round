// http://codeforces.com/problemset/problem/158/A

#include <iostream>
#include <vector>
using namespace std;
int main()
{
int n,k,cont=0;
cin>>n>>k;
vector < int > num(n);
for(int i=0 ; i < n ; i++)
	cin>>num[i];
	
for(int i=0 ; i < n ; i++)
	if(num[i] >= num[k-1] && num[i] > 0)
			cont++;
cout<<cont;		
	
	return 0;
}
